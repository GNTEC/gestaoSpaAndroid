<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_loading"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#4DB6AC"
        app:popupTheme="@style/AppTheme.PopupOverlay"> </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_marginTop="16dp"
        android:id="@+id/loading_img"
        android:background="@drawable/logotipo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/toolbar_loading"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/loading_nome"
        android:gravity="center_horizontal"
        android:textColor="#ff6f00"
        android:layout_below="@+id/loading_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="HIGIENÓPOLIS"/>

    <TextView
        android:id="@+id/loading_cidade"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="São Paulo"
        android:layout_below="@+id/loading_nome"/>

    <RelativeLayout
        android:layout_margin="16dp"
        android:background="#bfbfbf"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/loading_cidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/loading_txv1"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="14dp"
            android:text="BUDDHA SPA: Um oásis na sua rotina\n\n O Buddha Spa é a maior rede de Spa Urbano do país, atualmento com 25 unidades em diversos estados."
            android:layout_alignParentTop="true" />

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/loading_txv1"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rodape"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/img_rodape" />


</RelativeLayout>