<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_loading"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/toolbar"
        app:popupTheme="@style/AppTheme.PopupOverlay"> </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_marginTop="16dp"
        android:id="@+id/loading_img"
        android:background="@drawable/logotipo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/toolbar_loading"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/loading_nome"
        android:gravity="center_horizontal"
        android:textColor="#ff6f00"
        android:layout_below="@+id/loading_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="HIGIENÓPOLIS"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/rodape"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/img_rodape" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_height="45dp"
        android:layout_marginTop="45dp"
        android:id="@+id/spn_escolha_unidade"
        android:layout_below="@+id/loading_cidade">

    </Spinner>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:textColor="#ffffff"
        android:text="Selecionar"
        android:layout_above="@+id/img_rodape"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/btn_selecionar_unidade" />

    <TextView
        android:id="@+id/loading_cidade"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="São Paulo"
        android:layout_below="@+id/loading_nome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Selecione a unidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loading_cidade"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:id="@+id/textView2" />

</RelativeLayout>